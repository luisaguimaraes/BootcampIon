@model Tarefas.Web.Models.TarefaViewModel

<form asp- action="Create">
    <div class="mb-3">
    @Html.LabelFor(model => model.Titulo, new {@class = "form-label"})
    @Html.TextBoxFor(model => model.Titulo, new {@class = "form-control"} )
    </div>

    <div class="mb-3">
    @Html.LabelFor(model => model.Descricao, new {@class = "form-label"})
    @Html.TextBoxFor(model => model.Descricao, new {@class = "form-control"} )
    </div>

    <br />
    <button type="submit" class="btn-primary">Enviar</button>
</form>